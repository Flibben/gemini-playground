import MainLayout from './MainLayout.astro';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

const { frontmatter } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');
const heroPath = frontmatter.heroImage.replace('../../', '/src/');

if (!images[heroPath]) throw new Error(`"${heroPath}" does not exist in "src/assets/images/"`);
---

<MainLayout title={frontmatter.title}>
  <article class="blog-post">
    <header class="post-header">
      <span class="tag">{frontmatter.category}</span>
      <h1>{frontmatter.title}</h1>
      <p class="meta">Published on {frontmatter.date} by {frontmatter.author}</p>
      
      {frontmatter.heroImage && (
        <Image 
          src={images[heroPath]()} 
          alt={frontmatter.heroAlt || ""} 
          width={800} 
          height={450}
          class="hero-img"
        />
      )}
    </header>
    
    <div class="content">
      <slot />
    </div>
  </article>
</MainLayout>

<style>
  .blog-post { max-width: 800px; margin: 0 auto; padding: 2rem 0; }
  .post-header { text-align: center; margin-bottom: 3rem; }
  
  .hero-img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    margin-top: 2rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  h1 { font-size: 3rem; color: var(--secondary); margin: 1rem 0; }
  .tag { background: var(--primary); color: white; padding: 0.25rem 0.75rem; border-radius: 99px; font-size: 0.8rem; font-weight: bold; }
  .meta { color: #64748b; font-size: 0.9rem; }

  .content { font-size: 1.125rem; line-height: 1.8; color: var(--text); }
  .content :global(img) { width: 100%; border-radius: 0.5rem; margin: 2rem 0; }
  .content :global(h2) { margin-top: 2.5rem; color: var(--secondary); }
</style>