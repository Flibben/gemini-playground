---
import MainLayout from './MainLayout.astro';
const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title}>
  <article class="blog-post">
    <header class="post-header">
      <span class="tag">{frontmatter.category}</span>
      <h1>{frontmatter.title}</h1>
      <p class="meta">Published on {frontmatter.date} by {frontmatter.author}</p>
    </header>
    
    <div class="content">
      <slot /> </div>
  </article>
</MainLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--secondary);
    margin: 1rem 0;
  }

  .tag {
    background: var(--primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 99px;
    font-size: 0.8rem;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 0.05em;
  }

  .meta {
    color: #64748b; /* Slate-500 */
    font-size: 0.9rem;
  }

  /* Typography for the Markdown content */
  .content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text);
  }
  
  /* Target elements inside the markdown */
  .content :global(h2) { margin-top: 2rem; color: var(--secondary); }
  .content :global(p) { margin-bottom: 1.5rem; }
  .content :global(img) { max-width: 100%; border-radius: 0.5rem; height: auto; }
</style>